<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <inceptionYear>2021</inceptionYear>
    <groupId>org.anxiouspigs.filepigger</groupId>
    <artifactId>filepigger-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <url>https://github.com/Anxious-Pigs/filepigger</url>
    <name>Filepigger</name>
    <description>Distributed File System</description>
    <scm>
        <url>git@github.com:Anxious-Pigs/filepigger.git</url>
        <connection>scm:git@github.com:Anxious-Pigs/filepigger.git</connection>
        <developerConnection>scm:git@github.com:Anxious-Pigs/filepigger.git</developerConnection>
        <tag>pigpiger-1.0.0-SNAPSHOT</tag>
    </scm>
    <developers>
        <developer>
            <id>anxiouspig</id>
            <name>XuFucheng</name>
            <email>xuxuffcc@gmail.com</email>
        </developer>
    </developers>
    <organization>
        <name>Anxious-Pigs</name>
        <url>https://github.com/Anxious-Pigs</url>
    </organization>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/Anxious-Pigs/filepigger/issues</url>
    </issueManagement>

    <modules>
        <module>core</module>
        <module>client</module>
        <module>example</module>
        <module>name-server</module>
        <module>data-server</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <fork>true</fork>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>